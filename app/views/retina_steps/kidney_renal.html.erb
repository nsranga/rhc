
<%= form_for @retina, url: wizard_path do |f| %>
  <p>
    <%= f.label :kidney_renal, "Renal Involvement" %>
    <%= f.select :kidney_renal, options_for_select([['No', 0], ['Microalbumineuria', 1], ['Creatinine > 1.6', 2], ['Creatinine > 4', 3]]) %>
  </p>
  <p>
    <%#= f.label :kidney_creatinine %>
    <%#= f.hidden_field :kidney_creatinine, size: 10 %>
    <%= f.hidden_field :kidney_creatinine, value: 1 %>
  </p>
  <p>
    <%#= f.label :kidney_micro_album %>
    <%# f.hidden_field :kidney_micro_album, options_for_select([['Yes', 1], ['No', 0]]) %>
    <%= f.hidden_field :kidney_micro_album, value: 1 %>
  </p>
 <%= f.submit 'Next', :class => 'nextbtn' %>
<%=  link_to 'Back', previous_wizard_path, :class => 'previousbtn' %>
<% end %>
<br><br>
<div class="footercontent">
<h3>Clinical parameters are:</h3>
<%= display_clinical_params(@retina) %>
</div>
