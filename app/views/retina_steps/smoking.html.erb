
<div id="content">
  <div class="login">

<%= form_for @retina, url: wizard_path do |f| %>
<br><br>
<center>

  <b>  <%= f.label :smoking, "Smoking" %> <br></b>
    <%= f.select :smoking, options_for_select([['No', 0], ['Yes', 1], ['Related lung disease', 2]]) %>

    <%= f.hidden_field :smoking_related_lung_disease, value: 1 %>

  </center>
  <br><br>

<%=  link_to 'Back', previous_wizard_path, :class => 'previousbtn' %>
<%= f.submit 'Next', :class => 'nextbtn' %>


<% end %>

</div>

<div class="footercontent">
<u>Clinical parameters are: </u>
<%= display_clinical_params(@retina) %>
</div>

</div>
